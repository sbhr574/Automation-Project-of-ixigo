pipeline {
  agent any
  stages {
    stage('Git Checkout') {
      steps {
        echo 'Git repo checkout operation.'
        input(message: 'Git Checkout Operation', id: 'Git Operation', ok: 'Ok, Lets do it!')
      }
    }

    stage('Build') {
      when {
        branch 'master'
      }
      steps {
        echo 'Started Clean and Build Process.'
        bat 'mvn clean install -DskipTests'
      }
    }

    stage('Test') {
      steps {
        echo 'Started test execution.'
        bat 'mvn test -Dsurefire.suiteXmlFiles=testNg.xml'
      }
    }

  }
  environment {
    maven = '${MVN_HOME}'
    jdk = '${JAVA_HOME}'
  }
}