pipeline{
 agent any
 environment {
    VERSION = '1.3.0'
    SERVER_CREDENTIAL = credentials('gitRepo')
    }
  stages{
      stage('build'){
        steps{
          echo 'build ${SERVER_CREDENTIAL}'
          bat'${SERVER_CREDENTIAL}'
        }
      }
       stage('test'){
        steps{
          withCredentials([usernamePassword(credentials: 'gitRepo', usernameVariable: USER, passwordVariable: PWD)]){
            echo 'some scripts we can write ${USER} ${PWD}'
          }
             
        }
      }
  }
}
